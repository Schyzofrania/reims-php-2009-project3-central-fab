{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'enregistrer</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.first_name, {'attr': {'placeholder': 'Pr√©nom'}}) }}
        {{ form_row(registrationForm.last_name, {'attr': {'placeholder': 'Nom'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Adresse email'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}, {label: 'Password'}) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Valider</button>
    {{ form_end(registrationForm) }}
{% endblock %}
