{% extends 'base.html.twig' %}

{% block body %}
<style>
.inputProfile input  {
    background-color: #c9f0ff;
    border: 1px solid #c9f0ff;
    border-radius: 10px;
    color: #5c677d;
    display: block;
    font-family: 'saira semi condensed';
    font-weight: 500;
    font-size: 20px;
    height: 50px;
    margin: 25px auto 0 auto;
    padding: 5px;
    text-align: center;
    width: 90%;
}

.btn {
    -webkit-user-select: none;
    -moz-user-select: none;
    background-color: #c9f0ff;
    border: 1px solid #c9f0ff;
    border-radius: .25rem;
    color: #5c677d;
    cursor: pointer;
    display: block;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    margin: .25rem auto 0 auto;
    padding: .375rem .75rem;
    text-align: center;
    text-decoration: none;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    vertical-align: middle;
    user-select: none;
}

.block-button {
    display: block !important;
}

ul {
    color: red;
    padding: 0;
}

li {
    color: red;
    display: block;
    list-style-type: none;
    width: 90%;
}
</style>
<div class="account-container">
    <div class="account-block-back">
        <span>&#60;</span> <a href="{{ path('creation') }}">Retour</a>
    </div>
        {% if app.user %}
            <h1 style="font-size: 20px; margin-top: 100px;">Bienvenue {{ app.user.firstname }}</h1>

            <div style="font-size: 13px; padding: 0 5px; width: 100%;">
                <h2 style="font-size: 16px;">Mes Informations</h2>

                <div>
                    <div>
                        <div style="display: inline-block; font-size: 13px; font-weight: bold; width: 30%;">Courriel</div>
                        <div style="display: inline-block; font-size: 13px; width: 65%;">{{ app.user.email }}</div>
                    </div>
                    <div>
                        <div style="display: inline-block; font-size: 13px; font-weight: bold; width: 30%;">Prénom</div>
                        <div style="display: inline-block; font-size: 13px; width: 65%;">{{ app.user.firstname }}</div>
                    </div>
                    <div>
                        <div style="display: inline-block; font-size: 13px; font-weight: bold; width: 30%;">Nom</div>
                        <div style="display: inline-block; font-size: 13px; width: 65%;">{{ app.user.lastname }}</div>
                    </div>
                </div>
            </div>

            <div>
            {{ form_start(emailForm) }}
                <div class="block-button inputProfile">
                    {{ form_row(emailForm.email, {'attr': {'placeholder': 'Votre Courriel'}}) }}
                </div>
                <button type="submit" class="btn">Mettre à jour</button>
            {{ form_end(emailForm) }}
            </div>

            <div style="font-size: 13px; padding: 0 5px;">
            {{ form_start(passwordForm) }}
                <div class="block-button inputProfile">
                    {{ form_row(passwordForm.plainPassword , {'attr': {'placeholder': 'Votre Mot de passe'}}) }}
                </div>
                <button type="submit" class="btn">Mettre à jour</button>
            {{ form_end(passwordForm) }}
            </div>

            <a href="{{ path('creation') }}">Ajouter votre Fablab</a>

            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}">Se connecter</a>
        {% endif %}
    </div>
</div>
{% endblock %}